<div class="d-flex flex-row">

  <div class="menu">
    <div class="heading-menu">
      <img class="img-logo" src="/img/logo.png" alt="">
    </div>
    <ul class="list-menu">
      <li class="list-menu-title"><a href="/admin"><img class="img-icon-menu" src="/img/product.svg" alt="">Quản lý sản phẩm</a></li>
      <li class="list-menu-title"><a href="/admin/bill"><img class="img-icon-menu" src="/img/oder.svg" alt="">Quản lý đơn hàng</a></li>
      <li class="list-menu-title"><a href="/admin/voucher"><img class="img-icon-menu" src="/img/bill.svg" alt="">Quản lý Voucher</a></li>
      {{!-- <li class="list-menu-title"><a href=""><img class="img-icon-menu" src="/img/statistical.svg" alt="">Thống kê doanh thu</a></li> --}}
    </ul>
  </div>
  <div class="admin-content">
    <div class="search-bar-wrap col-7">
    <form class="d-flex" role="search" action="/search" method="get">
      <input id="search-input" class="form-control" placeholder="Tìm kiếm" name="query">
      <div id="search-results"></div>
      <button class="search-submit" type="submit">
        <i class="bi bi-search"></i>
      </button>
    </form>
    </div>
    <button class="add-product">
      <a href="/admin/createvoucher" class="text-add-product">Thêm voucher</a>
    </button>

    <table id="my-table" class="table table-striped">
      <thead>
        <tr>
          <th class="header-title" scope="col">STT</th>
          <th class="header-title" scope="col">Tên mã</th>
          <th class="header-title" scope="col">Voucher</th>
          <th class="header-title" scope="col">Số lượng</th>
          <th class="header-title" scope="col">Mức giảm giá</th>
          <th class="header-title" scope="col">Ngày bắt đầu</th>
          <th class="header-title" scope="col">Ngày kết thúc</th>
          <th class="header-title" scope="col">Hành động</th>

      </thead>
      <tbody class="table-group-divider">

      {{#each vouchers }}

        <tr>
          <td class="table-content"></td>
          <td class="table-content">
            <p class="text">{{this.name}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.couponcode}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.quantity}}</p>
          </td>
            <td class="table-content">
            <p class="text">{{this.discount}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.starttime}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.endtime}}</p>
          </td>
          <td class="table-content">
              <button class="btn btn-primary edit-admin-btn" value="{{this._id }}" ><i class="bi bi-pencil">  Sửa</i></button>
              <button class="btn btn-danger delete-admin-btn" value="{{this._id }}" ><i class="bi bi-trash">  Xóa</i></button>
          </td>
        </tr>
      {{/each }}
      </tbody>

    </table>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('#my-table tbody tr').each(function(index) {
      $(this).find('td:first').text(index + 1);
    });
  })
</script>
