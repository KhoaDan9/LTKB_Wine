
<div class='d-flex justify-content-center'>
  <div class='auth-form'>
     
    <h3>Nhập Mã khôi phục</h3>
    <form action="/user/send-keypassword" method='post'>
     {{#if incorrect }}
      <p class="incorrect">Mã khôi phục không chính xác!!</p>
    {{/if  }}
      <input type="text" name="username" hidden value="{{ user.username }}">
      <input name="keypassword" placeholder="Mã khôi phục của bạn..." required>
      <button type="submit">Gửi</button>
    </form>
  </div>

</div>