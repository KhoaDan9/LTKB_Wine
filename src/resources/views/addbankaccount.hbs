<link rel="stylesheet" href="/css/create.css">

<body class="body-create">
  <div class="heading">
    <h3>Thêm tài khoản ngân hàng</h3>
    <form method="POST" action="/user/add-bankaccount">
      {{#if errors }}
        <p class="incorrect">{{errors.msg}}</p>
      {{/if  }}
      <div class="form-group">
        <label class="title-product" for="bankname">Tên ngân hàng:</label>
        <input type="text" class="form-control" name="bankname" id="bankname">
      </div>
      <div class="form-group">
        <label class="title-product" for="bankbranch">Tên chi nhánh ngân hàng:</label>
        <input type="text" class="form-control" name="bankbranch" id="bankbranch">
      </div>
      <div class="form-group">
        <label class="title-product" for="accountnumber">Số tài khoản:</label>
        <input type="text" class="form-control" name="accountnumber" id="accountnumber">
      </div>
      <div class="form-group">
        <label class="title-product" for="fullname">Họ và tên:</label>
        <input type="text" class="form-control" name="fullname" id="fullname">
      </div>
      <div class="form-group">
        <label class="title-product" for="userid">Căn cước công dân:</label>
        <input type="text" class="form-control" name="userid" id="userid">
      </div>
     
        <div style="padding-top: 15px;">
        <button type="submit" class="btn btn-primary">Thêm tài khoản ngân hàng</button>
        <button type="button" class="btn btn-primary exit-btn"><a href="/user">Thoát</a></button>        
      </div>
    </form>
  </div>
</body>