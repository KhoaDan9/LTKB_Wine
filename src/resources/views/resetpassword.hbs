<div class='d-flex justify-content-center'>
  <div class='auth-form'>
    <h3>Đổi mật khẩu</h3>
    <form action='/user/reset-password' method='post'>
    
      <div class='mb-3'>
        {{#if errpassword  }}
          <p class="incorrect">Mật khẩu cũ không chính xác</p>
        {{/if  }}
        <label class='form-label'>Mật khẩu cũ </label>
        <div class="wrap-input-password">
          <input name='oldpassword' type='text' class='form-control' id="input-pw0" type="password" required /> <i class="bi bi-eye-fill icon-password"></i>
        </div>
      </div>
      <div class='mb-3'>
        {{#if wrongpassword  }}
          <p class="incorrect">Mật khẩu không chính xác</p>
        {{/if  }}
        <label class='form-label'>Mật khẩu mới </label>
        <div class="wrap-input-password">
          <input name='newpassword1' type='text' class='form-control' id="input-pw1" type="password" required /> <i class="bi bi-eye-fill icon-password"></i>
        </div>
      </div>
       <div class='mb-3'>
        <label class='form-label'>Nhập lại mật khẩu </label>
        <div class="wrap-input-password">
          <input name='newpassword2' type='text' class='form-control' id="input-pw2" type="password" required /> <i class="bi bi-eye-fill icon-password"></i>
        </div>
      </div>
      <button type='submit' class='btn btn-primary'>Đổi mật khẩu</button>
    </form>
    <a href="/">Trở về trang chủ</a>
  </div>

</div>

<script>
  var iconOnclick = Array.from(document.getElementsByClassName('icon-password'))
  for(let i = 0; i < iconOnclick.length; i++)
  {
    iconOnclick[i].addEventListener('click',() => {
      var passwordInput = document.getElementById("input-pw"+i);
      console.log(passwordInput);
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
      } else {
        passwordInput.type = "password";
      }
    })
  }

</script>