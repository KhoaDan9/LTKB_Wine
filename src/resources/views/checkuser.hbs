<div class="d-flex flex-row">

  <div class="menu">
    <div class="heading-menu">
      <img class="img-logo" src="/img/logo.png" alt="">
    </div>
    <ul class="list-menu">
      <li class="list-menu-title"><a href="/admin"><img class="img-icon-menu" src="/img/product.svg" alt="">Quản lý sản
          phẩm</a></li>
      <li class="list-menu-title"><a href="/admin/bill"><img class="img-icon-menu" src="/img/oder.svg" alt="">Quản lý
          đơn hàng</a></li>
      <li class="list-menu-title"><a href="/admin/voucher"><img class="img-icon-menu" src="/img/bill.svg" alt="">Quản lý
          Voucher</a></li>
      <li class="list-menu-title"><a href="/admin/statistic"><img class="img-icon-menu" src="/img/statistical.svg"
            alt="">Thống kê doanh thu</a></li>
      <li class="list-menu-title"><a href="/admin/checkuser"><i class="bi bi-person-vcard"
            style="font-size: 25px; padding-right: 12px"></i>Kiểm tra user</a></li>

    </ul>
  </div>
  <div class="admin-content">

    <table id="my-table" class="table table-striped">
      <thead>
        <tr>
          <th class="header-title" scope="col">STT</th>
          <th class="header-title" scope="col">Username</th>
          <th class="header-title" scope="col">Họ và tên</th>
          <th class="header-title" scope="col">Ngày sinh</th>
          <th class="header-title" scope="col">Email</th>
          <th class="header-title" scope="col">Giới tính</th>
          <th class="header-title" scope="col">Địa chỉ</th>
          <th class="header-title" scope="col">Số điện thoại</th>
          <th class="header-title" scope="col">Ảnh căn cước</th>
          <th class="header-title" scope="col">Hành động</th>
      </thead>
      <tbody class="table-group-divider">

        {{#each users }}

        <tr>
          <td class="table-content"></td>
          <td class="table-content">
            <p class="text">{{this.username}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.fullname}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.birth}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.email}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.gender}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.address}}</p>
          </td>
          <td class="table-content">
            <p class="text">{{this.phone}}</p>
          </td>
          <td class="table-content">
            <div class="dad-box">
              <img class="img-wine" src="./tkb - Copy.jpg" alt="">
            </div>
          </td>
          {{!-- <td class="table-content">
            <div class="dad-box">
              <img class="img-wine" src="https://cdnimg.vietnamplus.vn/uploaded/qfsqy/2023_04_05/ruou_vang.jpg" alt="">
            </div>
          </td> --}}
          <td class="table-content">
            <button class="btn btn-primary edit-admin-btn" value="{{this._id }}"><i class="bi bi-pencil">
                Sửa</i></button>
            <button class="btn btn-danger delete-admin-btn" value="{{this._id }}"><i class="bi bi-trash">
                Xóa</i></button>
          </td>
        </tr>
        {{/each }}
      </tbody>

    </table>
  </div>
</div>

<form name="admin-form"></form>

<script>
  $(document).ready(function () {

    var editBtn = $('.edit-admin-btn')
    var deleteBtn = $('.delete-admin-btn')
    var form = $('[name="admin-form"]')

    $('#my-table tbody tr').each(function (index) {
      $(this).find('td:first').text(index + 1);
    });

    editBtn.click(function () {
      form.attr('action', '/admin/edit/' + $(this).val())
      form.attr('method', 'get')
      form.submit()
    })

    deleteBtn.click(function () {
      form.attr('action', '/admin/delete/' + $(this).val())
      form.attr('method', 'get')
      form.submit()
    })
  });

</script>