<body class="body-create">
  <div class="heading">
    <h3>Cập nhật sản phẩm</h3>
    <form method="POST" action="/admin/{{ product._id}}?_method=PUT">
      <div class="form-group">
        <label for="name">Tên sản phẩm</label>
        <input type="text" class="form-control" value="{{ product.name }}" name="name" id="name">
      </div>
      <div class="form-group">
        <label for="origin">Nguồn gốc</label>
        <input type="text" class="form-control" value="{{ product.origin }}" name="origin" id="origin">
      </div>
      <div class="form-group">
        <label for="quantity">Số lượng</label>
        <input type="text" class="form-control" value="{{ product.quantity }}" name="quantity" id="quantity">
      </div>
      <div class="form-group">
        <label for="description">Mô tả</label>
        <textarea class="form-control" name="description" id="description">{{ product.description }}</textarea>
      </div>
      <div class="form-group">
        <label for="price">Đơn giá</label>
        <input type="text" class="form-control" value="{{ product.price }}" name="price" id="price">
      </div>
      <div class="form-group">
        <label for="imgsrc">Hình ảnh</label>
        <input type="text" class="form-control" value="{{ product.imgsrc }}" name="imgsrc" id="imgsrc">
      </div>

      <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
    </form>

  </div>
</body>